generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ongs {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  uf        String
  city      String
  name      String
  whatsapp  String
  email     String
  incident incidents[]
}

model incidents {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  value       Float
  ong_id      ongs   @relation(references: [id], fields: [ongsId])
  ongsId      String @db.ObjectId
}
